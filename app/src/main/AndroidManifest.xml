        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:label="Registration">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="healthcareapp-6d923.firebaseapp.com"
                    android:pathPrefix="/__/auth/handler" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity android:name=".DoctorDashboardActivity" android:exported="false" />
        <!-- UPDATED: Added a parent activity for better navigation -->
