<resources>

    <!-- ===== App Theme ===== -->
    <style name="Theme.MediconnectAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBrand</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryBrand</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryBrand</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- ===== Language Button: Selected State ===== -->
    <style name="LanguageButton.Selected" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/colorPrimaryBrand</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- ===== Language Button: Unselected State ===== -->
    <style name="LanguageButton.Unselected" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>

        <!-- Use Material attributes instead of raw stroke -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents</item>
        <item name="strokeColor">@color/colorPrimaryBrand</item>
        <item name="strokeWidth">1dp</item>

        <item name="android:textColor">@color/colorPrimaryBrand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <!-- ===== App Heading ===== -->
    <style name="AppHeading">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#004D40</item>
    </style>

    <!-- ===== App Button Text ===== -->
    <style name="AppButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- ... your base theme ... -->

    <!-- Style for the card with only top corners rounded -->
    <style name="ShapeAppearance.App.Corner.Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/otp_box_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



    <!-- This is the original style for the gray backspace button -->
    <!-- UPDATED: Keypad button style for the new design -->
    <style name="KeypadButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- UPDATED: Using the new lighter text color -->
        <item name="android:textColor">@color/text_light_dark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>



        <style name="ModernKeypadButton" parent="Widget.AppCompat.Button.Borderless">
            <item name="android:layout_width">80dp</item>
            <item name="android:layout_height">60dp</item>
            <item name="android:textSize">24sp</item>
            <item name="android:textColor">#343A40</item>
            <item name="android:fontFamily">sans-serif-light</item>
        </style>

        <style name="PinDot">
            <item name="android:layout_width">16dp</item>
            <item name="android:layout_height">16dp</item>
            <item name="android:layout_marginStart">12dp</item>
            <item name="android:layout_marginEnd">12dp</item>
            <item name="android:src">@drawable/pin_dot_selector</item>
        </style>



</resources>