<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mediconnect_ai" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Mediconnect_ai" parent="Base.Theme.Mediconnect_ai" />




        <!-- NEW: Add these styles for a consistent and attractive dashboard -->
        <style name="DashboardCard">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">16dp</item>
            <item name="cardCornerRadius">12dp</item>
            <item name="cardElevation">4dp</item>
        </style>

        <style name="DashboardCardContent">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:padding">16dp</item>
        </style>

        <style name="DashboardCardIcon">
            <item name="android:layout_width">48dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:padding">10dp</item>
        </style>

        <style name="DashboardCardTextContainer">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginStart">16dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="DashboardCardTitle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="DashboardCardSubtitle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#6C757D</item> <!-- A softer gray for subtitles -->
        </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    </resources>



