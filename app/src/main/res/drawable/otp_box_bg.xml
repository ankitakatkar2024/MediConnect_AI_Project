<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light gradient background -->
    <gradient
        android:startColor="#E0F2F1"
    android:endColor="#A5D6A7"
    android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50" /> <!-- Healthy green -->

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
