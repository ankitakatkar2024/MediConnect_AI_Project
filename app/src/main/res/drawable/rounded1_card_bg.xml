<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">



    <solid android:color="@android:color/white"
    android:angle="45" />

    <!-- Border with healthcare-friendly teal -->
    <stroke
        android:width="2dp"
        android:color="#26A69A" /> <!-- Medium teal -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding for better touch targets -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
