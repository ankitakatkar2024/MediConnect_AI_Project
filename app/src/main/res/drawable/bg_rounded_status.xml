<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Default background color (Light Gray) -->
    <!-- This will be overridden by your Adapter logic -->
    <solid android:color="#E0E0E0"/>

    <!-- This radius makes the corners rounded (Pill shape) -->
    <corners android:radius="16dp"/>

    <!-- Optional padding to keep text away from edges -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>