<?xml version="1.0" encoding="utf-8"?>
<!--
  This drawable creates a rounded rectangle shape, perfect for a filter button or tag.
  The high corner radius will make it look like a "pill" or "chip".
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
      Set the fill color.
      This light teal matches the dashboard's accent color scheme and provides
      good contrast for the dark teal text used in the layout.
    -->
    <solid android:color="#E0F2F1" />

    <!--
      Set the corner radius.
      Using a large value like 20dp ensures the ends are fully rounded,
      giving it the characteristic "pill" shape.
    -->
    <corners android:radius="20dp" />

</shape>