<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– How the AI Works"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <View android:layout_width="20dp" android:layout_height="20dp" android:background="#4CAF50" android:layout_marginEnd="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Normal: Scattered cases. No action needed." android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <View android:layout_width="20dp" android:layout_height="20dp" android:background="#FFEB3B" android:layout_marginEnd="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Warning: 3-4 cases nearby. Monitor closely." android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <View android:layout_width="20dp" android:layout_height="20dp" android:background="#F44336" android:layout_marginEnd="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CRITICAL: 5+ cases or Severe Symptoms. Immediate Action!" android:textSize="14sp" android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The AI analyzes GPS data from the last 7 days to identify clusters within 500 meters."
        android:textColor="#757575"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="8dp"/>

</LinearLayout>