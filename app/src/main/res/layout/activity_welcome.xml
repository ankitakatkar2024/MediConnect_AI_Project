<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingHorizontal="0dp"
    tools:context=".WelcomeActivity">

    <!-- Top Illustration -->
    <ImageView
        android:id="@+id/illustration_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:adjustViewBounds="true"
        android:maxWidth="220dp"
        android:maxHeight="220dp"
        android:src="@drawable/ic_welcome_illustration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/welcome_title_hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/welcome_to_mediconnect_ai"
        android:textColor="@color/primary_teal"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/illustration_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/welcome_subtitle_hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/welcome_subtitle_hero"
        android:textColor="@color/secondary_text_color_dark"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/welcome_title_hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Privacy Policy / Terms -->
    <TextView
        android:id="@+id/welcome_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:linksClickable="true"
        android:text="@string/privacy_policy_and_terms"
        android:textColor="@color/secondary_text_color_dark"
        android:textColorLink="@color/primary_teal"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/welcome_subtitle_hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Language Selector -->
    <LinearLayout
        android:id="@+id/language_selector_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/language_selector_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:minWidth="150dp"
        android:minHeight="52dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/change_language"
            android:src="@drawable/ic_language"
            app:tint="@color/primary_teal" />

        <TextView
            android:id="@+id/selected_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/english"
            android:textColor="@color/primary_text_color_dark"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/dropdown_icon_desc"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/primary_teal" />

    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/agree_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/primary_teal"
        android:fontFamily="sans-serif-medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/agree_and_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:cornerRadius="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white_ripple"
        android:elevation="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
