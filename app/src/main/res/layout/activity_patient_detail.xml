<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPatientNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Patient Full Name" />

            <TextView
                android:id="@+id/tvPatientIdDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="ID: 123" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age" />

            <TextView
                android:id="@+id/tvPatientAgeDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="45" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender" />

            <TextView
                android:id="@+id/tvPatientGenderDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="Female" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number" />

            <TextView
                android:id="@+id/tvPatientContactDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="9876543210" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address / Village" />

            <TextView
                android:id="@+id/tvPatientAddressDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="Some Village, Some District" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhaar Number" />

            <TextView
                android:id="@+id/tvPatientAadhaarDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="1234 5678 9012" />

            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family / House ID"
                android:textColor="@color/primary_teal"/>

            <TextView
                android:id="@+id/tvPatientFamilyId"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="FAM-001" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Household Size"
                        android:textColor="@color/primary_teal"/>
                    <TextView
                        android:id="@+id/tvPatientHouseholdSize"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        tools:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Head of Family"
                        android:textColor="@color/primary_teal"/>
                    <TextView
                        android:id="@+id/tvPatientHeadOfFamily"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        tools:text="Yes" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-existing Conditions" />

            <TextView
                android:id="@+id/tvPatientConditionsDetail"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                tools:text="Diabetes, Hypertension" />

            <Button
                android:id="@+id/btnViewFullHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Full Medical History"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPregnancyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/primary_teal"
                app:contentPadding="16dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Pregnancy Record"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTrimester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/white"
                        tools:text="Current Trimester: 2nd" />

                    <TextView
                        android:id="@+id/tvLmpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/white"
                        tools:text="LMP: 15 June 2025" />

                    <TextView
                        android:id="@+id/tvEdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/white"
                        tools:text="EDD: 22 March 2026" />

                    <Button
                        android:id="@+id/btnRegisterDelivery"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Register Delivery"
                        android:textColor="@android:color/white"
                        app:strokeColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnViewAncSchedule"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="View ANC Schedule ➜"
                        android:textColor="@android:color/white"
                        app:icon="@drawable/ic_check_circle"
                        app:iconTint="@android:color/white"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTBDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="#E8EAF6"
                app:contentPadding="16dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TB Treatment Record (NTEP)"
                        android:textColor="#283593"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTBPhase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#303F9F"
                        tools:text="Phase: Intensive (IP)" />

                    <TextView
                        android:id="@+id/tvTBStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#303F9F"
                        tools:text="Started: 12 Jan 2025" />

                    <TextView
                        android:id="@+id/btnViewTBVisits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        android:text="View Follow-ups ➜"
                        android:textColor="#1A237E"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnRegisterTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Screen / Register for TB"
                android:backgroundTint="#5C6BC0"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnViewPncSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="View PNC Schedule"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnRegisterPregnancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Register Pregnancy"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDeletePatient"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="@android:color/holo_red_dark" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnEditPatient"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Edit" />

                <Button
                    android:id="@+id/btnDownloadReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    app:backgroundTint="@color/primary_teal" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Log Symptoms (Outbreak Check)"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                app:icon="@drawable/ic_warning" />

            <Button
                android:id="@+id/btnReferPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="Refer Patient"
                app:backgroundTint="@color/primary_teal"
                app:icon="@drawable/ic_refer" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabEmergencySos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="#D32F2F"
        android:text="SOS"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@drawable/ic_warning"
        app:iconTint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>