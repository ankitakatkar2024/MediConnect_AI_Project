<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreenActivity">

    <!-- Layer 1: The Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_health_worker"
        android:contentDescription="@string/start_screen_background_desc" />

    <!-- Layer 2: The Colorful Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aurora_gradient_overlay" />

    <!-- Layer 3: The Content (Text and Button) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="32dp">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_screen_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/start_screen_subtitle"
            android:textSize="18sp"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"/>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartUsingApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:text="@string/start_screen_button"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:background="@drawable/gradient_button_background"
            app:backgroundTint="@null"
            app:cornerRadius="100dp"/>

        <!-- Extra tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/start_screen_tagline"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />
    </LinearLayout>

</FrameLayout>
