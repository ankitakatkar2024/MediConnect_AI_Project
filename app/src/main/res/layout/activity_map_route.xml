<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRecalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardRouteInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_popup_sync"
        app:backgroundTint="@color/white"
        app:tint="#008080"
        android:contentDescription="Refresh Route" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRouteInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Visit Target"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:textColor="#757575"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRouteInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculating optimal path..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tip: Tap any map pin to skip to that house)"
                android:textSize="12sp"
                android:textColor="#008080"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:drawablePadding="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMarkVisited"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mark Done"
                    android:textColor="#008080"
                    app:strokeColor="#008080"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnStartNav"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Navigate"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#008080"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_rounded_status"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:contentDescription="Go Back" />

</RelativeLayout>